                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textStyle="normal|bold"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TATA TERTIB / JENIS PELANGGARAN"
                        android:textStyle="normal|bold"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Aksi"
                        android:textStyle="normal|bold"
                        android:textAlignment="center"/>

                </TableRow>

                <TableRow
                    android:background="#d1d2d2"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="A."
                        android:textStyle="normal|bold"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TERLAMBAT"
                        android:textStyle="normal|bold"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />

                </TableRow>

                <TableRow
                    android:background="#ECEFF1"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1-10 menit setelah bel tanda masuk\ndibunyikan,siswa\ndiperbolehkan Masuk dengan izin guru" />

                    <CheckBox
                        android:id="@+id/cb_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"/>
                </TableRow>

                <TableRow
                    android:background="#ECEFF1"
                    android:padding="5dp">

