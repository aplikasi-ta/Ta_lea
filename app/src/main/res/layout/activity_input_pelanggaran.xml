                        android:layout_weight="1"
                        android:text="Tidak memakai badge lokasi / OSIS" />

                    <CheckBox
                        android:id="@+id/cb_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"/>

                </TableRow>

                <TableRow
                    android:background="#ECEFF1"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Berpakaian ketat, rok mini, baju jankis" />

                    <CheckBox
                        android:id="@+id/cb_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"/>

                </TableRow>

                <TableRow
                    android:background="#ECEFF1"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Memakai celana gombor, pensil, celana begok\n(pelanggaran poin 1,2,3,4 dipulangkan\nuntuk mengganti pakaian\n standar yang ditentukan sekolah)" />

                    <CheckBox
                        android:id="@+id/cb_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"/>

                </TableRow>

            </TableLayout>

        </LinearLayout>

        </ScrollView>

    </HorizontalScrollView>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="380dp"
        android:text="Next"/>

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Selesai"
        android:layout_below="@+id/horizontalScrollView"
        android:layout_alignParentStart="true" />


</RelativeLayout>
