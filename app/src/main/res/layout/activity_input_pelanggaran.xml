                        android:id="@+id/cb_4b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"/>

                </TableRow>

                <TableRow
                    android:background="#d1d2d2"
                    android:padding="5dp">

